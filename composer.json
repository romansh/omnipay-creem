{
    "name": "romansh/omnipay-creem",
    "type": "library",
    "description": "Creem driver for Omnipay payment processing library",
    "keywords": [
        "gateway",
        "merchant",
        "omnipay",
        "pay",
        "payment",
        "creem",
        "purchase",
        "saas"
    ],
    "homepage": "https://github.com/romansh/omnipay-creem",
    "license": "MIT",
    "authors": [
        {
            "name": "Roman Shalabanov"
        }
    ],
    "autoload": {
        "psr-4": {
            "Omnipay\\Creem\\": "src/"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "omnipay/common": "^3.0",
        "symfony/http-client": "^7.4",
        "php-http/httplug": "^2.4",
        "nyholm/psr7": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
